{
  "name": "cabinet-builder",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration || echo 'No integration tests yet'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:smoke": "playwright test --grep @smoke",
    "test:storybook": "echo 'Storybook tests require browser setup. Run storybook manually: npm run storybook'",
    "test:all": "npm run typecheck && npm run lint && npm run test:unit && npm run test:integration && npm run test:storybook && npm run test:e2e:smoke",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
